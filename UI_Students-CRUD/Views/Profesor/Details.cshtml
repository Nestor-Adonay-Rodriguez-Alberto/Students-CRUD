@model Entidades.Profesor

@{
    ViewData["Title"] = "Details";
}
<style>
    /* Estilos personalizados */
    .form-container {
        max-width: 700px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>


<div class="form-container">
    <h1>Detalles</h1><br />

    <div>
        <h5>Datos Del Profesor</h5>
        <hr />

        <!-- FILA #1 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Profesor-info-item">
                    <dt>NOMBRE:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </div>

                <div class="Profesor-info-item">
                    <dt>NACIMIENTO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FechaNacimiento)
                    </dd>
                </div>

            </div>

            <div class="col-sm-6">
                <div class="Profesor-info-item">
                    <dt>TELEFONO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                </div>

                <div class="Profesor-info-item">
                    <dt>GRADO ACADEMICO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GradoAcademico)
                    </dd>
                </div>

            </div>

        </div>

        <!-- FILA #2 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Profesor-info-item">
                    <dt>EMAIL:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Gmail)
                    </dd>
                </div>

                <div class="Profesor-info-item">
                    <dt>SALARIO</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Sueldo)
                    </dd>
                </div>

            </div>

            <div class="col-sm-6">

                <div class="Profesor-info-item">
                    <dt>AULA:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Aula)
                    </dd>
                </div>

                <div class="Profesor-info-item">
                    <dt>ROL ESCUELA:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Objeto_Rol.Nombre)
                    </dd>
                </div>

            </div>
        </div>

        <!-- FILA #3 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Profesor-info-item">
                    <dt>FOTOGRAFIA</dt>
                    <dd class="col-sm-10">
                        @{
                            // Es La Imagen En Base64
                            string Imagen_Mostar = "";

                            if (Model.Fotografia != null && Model.Fotografia.Length > 0)
                            {
                                string Cadena_Imagen = Convert.ToBase64String(Model.Fotografia);
                                Imagen_Mostar = "data:image/jpeg;base64," + Cadena_Imagen;
                            }

                            if (Imagen_Mostar.Trim().Length > 0)
                            {
                                <img id="VistaImagenProfesor" src="@Imagen_Mostar" style="max-width:100px; max-height:100px" />
                            }
                            else
                            {
                                <img id="VistaImagenEmpleado" src="~/img/defecto.jpg" style="max-width:100px; max-height:100px" />
                            }
                        }
                    </dd>

                </div>

            </div>


        </div>


        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id_Profesor" class="btn btn-primary">EDITAR</a> |
            <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
        </div>

    </div>
</div>
