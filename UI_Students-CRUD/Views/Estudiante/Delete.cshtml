@model Entidades.Estudiante

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Estilos personalizados */
    .form-container {
        max-width: 700px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>


<div class="form-container">
    <h1>Eliminar</h1>

    <div>
        <h5>Datos Del Estudiante</h5>
        <hr />

        <!-- FILA #1 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Estudiante-info-item">
                    <dt>NOMBRE:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </div>

                <div class="Estudiante-info-item">
                    <dt>GRADO ACADEMICO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GradoAcademico)
                    </dd>
                </div>

            </div>

            <div class="col-sm-6">
                <div class="Estudiante-info-item">
                    <dt>NACIMIENTO:</dt>
                    <dd class="col-sm-10">
                        @Model.FechaNacimiento.ToString("dd/MM/yyyy")
                    </dd>
                </div>

                <div class="Estudiante-info-item">
                    <dt>RESIDENCIA:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                </div>

            </div>

        </div>

        <!-- FILA #2 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Estudiante-info-item">
                    <dt>TELEFONO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                </div>

                <div class="Estudiante-info-item">
                    <dt>EMAIL:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Gmail)
                    </dd>
                </div>

            </div>

            <div class="col-sm-6">

                <div class="Estudiante-info-item">
                    <dt>FOTO ESTUDIANTE:</dt>
                    <dd class="col-sm-10">
                        @{
                            // Es La Imagen En Base64
                            string Imagen_Mostar = "";

                            if (Model.Fotografia != null && Model.Fotografia.Length > 0)
                            {
                                string Cadena_Imagen = Convert.ToBase64String(Model.Fotografia);
                                Imagen_Mostar = "data:image/jpeg;base64," + Cadena_Imagen;
                            }

                            if (Imagen_Mostar.Trim().Length > 0)
                            {
                                <img src="@Imagen_Mostar" style="max-width:100px; max-height:100px" />
                            }
                            else
                            {
                                <img src="~/img/defecto.jpg" style="max-width:100px; max-height:100px" />
                            }
                        }
                    </dd>
                </div>


            </div>

        </div>


        <!-- FILA #3 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Estudiante-info-item">
                    <dt>MATERIA:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Objeto_Materia.Nombre)
                    </dd>
                </div>

                <div class="Estudiante-info-item">
                    <dt>HORARIO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Objeto_Materia.Horario)
                    </dd>
                </div>

                <div class="Estudiante-info-item">
                    <dt>AULA:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Objeto_Materia.Objeto_Profesor.Aula)
                    </dd>
                </div>
            </div>

            <div class="col-sm-6">

                <div class="Estudiante-info-item">
                    <dt>FOTO PROFESOR:</dt>
                    <dd class="col-sm-10">
                        @{
                            // Es La Imagen En Base64
                            string Imagen_Profesor = "";

                            if (Model.Objeto_Materia.Objeto_Profesor.Fotografia != null && Model.Objeto_Materia.Objeto_Profesor.Fotografia.Length > 0)
                            {
                                string Cadena_Imagen = Convert.ToBase64String(Model.Objeto_Materia.Objeto_Profesor.Fotografia);
                                Imagen_Profesor = "data:image/jpeg;base64," + Cadena_Imagen;
                            }

                            if (Imagen_Mostar.Trim().Length > 0)
                            {
                                <img src="@Imagen_Profesor" style="max-width:100px; max-height:100px" />
                            }
                            else
                            {
                                <img src="~/img/defecto.jpg" style="max-width:100px; max-height:100px" />
                            }
                        }
                    </dd>
                </div>

            </div>

        </div>



        <form asp-action="Delete">
            <input type="hidden" asp-for="Id_Estudiante" />
            <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
        </form>
    </div>
</div>
