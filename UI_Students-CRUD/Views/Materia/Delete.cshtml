@model Entidades.Materia

@{
    ViewData["Title"] = "Delete";
}

<style>
    /* Estilos personalizados */
    .form-container {
        max-width: 700px;
        padding: 20px;
        background-color: #f7f7f7;
        border-radius: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: auto;
        margin-top: 20px;
    }

        .form-container h1 {
            text-align: center;
            font-size: 28px;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        .form-container .row {
            margin-bottom: 10px;
        }

        .form-container label {
            font-weight: bold;
        }

</style>


<div class="form-container">
    <h1>ELIMINAR</h1><br />

    <div>
        <h5>Datos De Materia</h5>
        <hr />

        <!-- FILA #1 -->
        <div class="row">

            <div class="col-sm-6">

                <div class="Materia-info-item">
                    <dt>NOMBRE:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </div>

                <div class="Materia-info-item">
                    <dt>HORARIO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Horario)
                    </dd>
                </div>

            </div>

            <div class="col-sm-6">
                <div class="Materia-info-item">
                    <dt>AULA:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Objeto_Profesor.Aula)
                    </dd>
                </div>

                <div class="Materia-info-item">
                    <dt>PROFESOR A CARGO:</dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Objeto_Profesor.Nombre)
                    </dd>
                </div>

            </div>

        </div>

        <!-- FILA #2 -->
        <div class="row">

            <div class="col-sm-6">
                <div class="Materia-info-item">
                    <dt>FOTO PROFESOR:</dt>
                    <dd class="col-sm-10">
                        @{
                            // Es La Imagen En Base64
                            string Imagen_Mostar = "";

                            if (Model.Objeto_Profesor.Fotografia != null && Model.Objeto_Profesor.Fotografia.Length > 0)
                            {
                                string Cadena_Imagen = Convert.ToBase64String(Model.Objeto_Profesor.Fotografia);
                                Imagen_Mostar = "data:image/jpeg;base64," + Cadena_Imagen;
                            }

                            if (Imagen_Mostar.Trim().Length > 0)
                            {
                                <img src="@Imagen_Mostar" style="max-width:100px; max-height:100px" />
                            }
                            else
                            {
                                <img src="~/img/defecto.jpg" style="max-width:100px; max-height:100px" />
                            }
                        }
                    </dd>
                </div>

            </div>

        </div>

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id_Materia" />
        <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">CANCELAR</a>
    </form>
</div>
